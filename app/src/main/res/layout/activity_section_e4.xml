<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.sections.SectionE4Activity">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_midline.ui.sections.SectionE4Activity" />
    </data>


    <ScrollView
        style="@style/i_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layoutDirection="ltr"
            android:id="@+id/fldGrpSectionE4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- e118  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVe118"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/e118" />

                    <EditText
                        android:id="@+id/e118"
                        style="@style/textInputName"
                        android:hint="@string/e118"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- e119  (d/m/y)Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVe119"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text='@string/e119' />

                    <LinearLayout
                        style="@style/linearlayout_view_wt_bound"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textView3Head"
                                android:text="@string/d108a" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/e119a"
                                style="@style/EditTextNum"
                                android:hint="@string/d108a"
                                android:maxLength="2"
                                android:textColor="@android:color/black"
                                app:defaultValue="00"
                                app:maxValue="30"
                                app:minValue="1"
                                app:type="range" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textView3Head"
                                android:text="@string/d108b" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/e119b"
                                style="@style/EditTextNum"
                                android:hint="@string/d108b"
                                android:maxLength="2"
                                android:textColor="@android:color/black"
                                app:defaultValue="00"
                                app:maxValue="11"
                                app:minValue="1"
                                app:type="range" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textView3Head"
                                android:text="@string/d108c" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/e119c"
                                style="@style/EditTextNum"
                                android:hint="@string/d108c"
                                android:maxLength="4"
                                android:textColor="@android:color/black"
                                app:defaultValue="00"
                                app:maxValue="0"
                                app:minValue="0"
                                app:type="range" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- e120  (age)Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVe120"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/e120" />

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/d109a" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/e120"
                        style="@style/EditTextNum"
                        android:enabled="false"
                        android:hint="@string/d109a"
                        android:maxLength="2"
                        android:textColor="@android:color/black"
                        app:maxValue="99"
                        app:minValue="0"
                        app:type="range" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- e121  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVe121"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/e121" />

                    <RadioGroup
                        android:id="@+id/e121"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/e121a"
                            style="@style/radiobutton"
                            android:text="@string/e121a" />

                        <RadioButton
                            android:id="@+id/e121b"
                            style="@style/radiobutton"
                            android:text="@string/e121b" />

                        <RadioButton
                            android:id="@+id/e121c"
                            style="@style/radiobutton"
                            android:text="@string/e121c" />

                        <RadioButton
                            android:id="@+id/e121d"
                            style="@style/radiobutton"
                            android:text="@string/e121d" />

                        <RadioButton
                            android:id="@+id/e121e"
                            style="@style/radiobutton"
                            android:text="@string/e121e" />

                        <RadioButton
                            android:id="@+id/e121f"
                            style="@style/radiobutton"
                            android:text="@string/e121f" />

                        <RadioButton
                            android:id="@+id/e121g"
                            style="@style/radiobutton"
                            android:text="@string/e121g" />

                        <RadioButton
                            android:id="@+id/e121h"
                            style="@style/radiobutton"
                            android:text="@string/e121h" />

                        <EditText
                            android:id="@+id/e12196x"
                            style="@style/EditTextAlpha"
                            android:hint="@string/specify"
                            android:tag="e12196"
                            android:text='@{e12196.checked? e12196x.getText().toString() : ""}'
                            android:visibility='@{e12196.checked? View.VISIBLE : View.GONE}' />

                        <RadioButton
                            android:id="@+id/e12196"
                            style="@style/radiobutton"
                            android:text="@string/other" />

                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- e122  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVe122"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/e122" />

                    <RadioGroup
                        android:id="@+id/e122"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/e122a"
                            style="@style/radiobutton"
                            android:text="@string/e122a" />

                        <RadioButton
                            android:id="@+id/e122b"
                            style="@style/radiobutton"
                            android:text="@string/e122b" />

                        <RadioButton
                            android:id="@+id/e122c"
                            style="@style/radiobutton"
                            android:text="@string/e122c" />

                        <RadioButton
                            android:id="@+id/e122d"
                            style="@style/radiobutton"
                            android:text="@string/e122d" />

                        <RadioButton
                            android:id="@+id/e122e"
                            style="@style/radiobutton"
                            android:text="@string/e122e" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEnd"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview" />

                <Button
                    android:id="@+id/btnNext"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</layout>