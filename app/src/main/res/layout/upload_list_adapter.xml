<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_midline.adapter.UploadListAdapter" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="37.5dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/ustatus_color"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:elevation="5.20dp">

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17.50dp"
                    android:layout_marginTop="17.50dp"
                    android:layout_marginRight="17.50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/utv_table_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="Table Name" />

                    <TextView
                        android:id="@+id/utv_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="Status" />

                    <ProgressBar
                        android:id="@+id/upb"
                        style="@android:style/Widget.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/black"
                    android:orientation="horizontal">

                </LinearLayout>

                <TextView
                    android:id="@+id/utv_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17.50dp"
                    android:layout_marginRight="17.50dp"
                    android:layout_marginBottom="17.50dp"
                    tools:text="Results:    " />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>